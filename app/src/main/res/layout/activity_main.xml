<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.zhongrui.myapplication.Activity.MainActivity">
    <Button
        android:id="@+id/btnFive"
        android:layout_width="400px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        android:textColor="@drawable/test_color"
        android:text="控制家居" />
    <Button
        android:id="@+id/btnOne"
        android:layout_width="400px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/btnFive"
        android:textColor="@drawable/test_color"
        android:text="查看温度" />
    <Button
        android:id="@+id/btnTwo"
        android:layout_width="400px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/btnFive"
        android:textColor="@drawable/test_color"
        android:text="查看湿度"/>
    <Button
        android:id="@+id/btnThree"
        android:layout_width="400px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        android:layout_above="@id/btnFive"
        android:textColor="@drawable/test_color"
        android:text="查看大气压"/>

    <Button
        android:id="@+id/btnFour"
        android:layout_width="550px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnFive"
        android:textColor="@drawable/test_color"
        android:text="查看环境情况" />
    <Button
        android:id="@+id/btnSix"
        android:layout_width="550px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnFour"
        android:textColor="@drawable/test_color"
        android:text="查看家庭监控" />

</RelativeLayout>